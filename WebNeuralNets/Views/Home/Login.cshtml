@model WebNeuralNets.Models.Dto.LoginModelDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_layout.cshtml";
}

<div class="header">
    <h1 class="translate">LOGIN_TEXT</h1>
</div>
<div class="content">
    <div class="text-danger">a</div>
    <div class="form-group">
        <label asp-for="Username" class="control-label translate">USERNAME_INPUT</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label translate">PASSWORD_INPUT</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input id="submit" type="submit" value="LOGIN_TEXT" class="btn btn-primary translate col-md-12" />
    </div>
</div>

<script src="~/js/register.js"></script>
