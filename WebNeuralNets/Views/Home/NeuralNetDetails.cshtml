@model WebNeuralNets.Models.Dto.LoginModelDto

@{
    Layout = "~/Views/_layout.cshtml";
}

<div class="header">
    <h1 class="translate">MENU_NEURALNETDETAILS</h1>
    <h2 id="NameHeader"></h2>
</div>
<div class="content">
    <input id="id" class="hidden" />
    <div class="form-group">
        <label for="Name" class="control-label translate">TEXT_NAME</label>
        <input id="Name" class="form-control" />
        <span id="NameValidation" class="text-danger hidden translate">VALIDATION_FIELDREQUIRED</span>
    </div>
    <div class="form-group">
        <label for="Description" class="control-label translate">TEXT_DESCRIPTION</label>
        <input id="Description" name="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description" class="control-label translate">TEXT_TRAININGRATE</label>
        <input id="TrainingRate" class="form-control" type="number" step="0.01" />
        <span id="TrainingRateValidation" class="text-danger hidden translate">VALIDATION_FIELDREQUIRED</span>
        <span id="TrainingRateTooLowValidation" class="text-danger hidden translate">VALIDATION_TRAININGRATETOOLOW</span>
    </div>
    <div class="form-gorup">
        <button id="editButton" class="btn btn-primary pull-right translate">TEXT_EDIT</button>
    </div>
</div>


<script src="~/js/neuralNetDetails.js"></script>
